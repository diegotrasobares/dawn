{%- style -%}
  .comparison-table {
    max-width: 600px;
    margin: auto;
    background-color: #333;
    color: #fff;
    border-radius: 10px;
    padding: 20px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border-collapse: collapse;
  }
  .comparison-table th, .comparison-table td {
    padding: 10px;
    text-align: center;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  }
  .comparison-table th {
    background-color: #444;
    color: #ffeb3b;
    font-weight: 700;
  }
  .comparison-table .logo {
    width: 80px;
    vertical-align: middle;
  }
  .comparison-table .feature {
    text-align: left;
  }
  .comparison-table .icon {
    width: 24px;
    height: 24px;
  }
  .comparison-table .no-border {
    border: none;
  }
  .comparison-table .no-border td {
    border: none;
  }
{%- endstyle -%}

<div class="comparison-table">
  <table>
    <thead>
      <tr>
        <th class="logo">
          {%- if section.settings.logo != blank -%}
            {%- assign logo_widths = '80, 160, 240, 320, 480, 640' -%}
            {%- capture logo_sizes -%}
              (min-width: 750px) 160px,
              (min-width: 500px) 80px,
              80px
            {%- endcapture -%}
            <img
              src="{{ section.settings.logo | image_url: width: 640 }}"
              sizes="{{ logo_sizes }}"
              srcset="{{ section.settings.logo | image_url: width: 80 }} 80w, {{ section.settings.logo | image_url: width: 160 }} 160w, {{ section.settings.logo | image_url: width: 240 }} 240w, {{ section.settings.logo | image_url: width: 320 }} 320w, {{ section.settings.logo | image_url: width: 480 }} 480w, {{ section.settings.logo | image_url: width: 640 }} 640w"
              alt="Logo"
              class="logo"
            >
          {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </th>
        <th>
          <h2>{{ section.settings.other_product_name }}</h2>
        </th>
      </tr>
    </thead>
    <tbody>
      {%- for feature in section.blocks -%}
        <tr>
          <td class="feature">{{ feature.settings.feature_name }}</td>
          <td class="feature-status">
            {%- if section.settings.icon_check != blank -%}
              <img src="{{ section.settings.icon_check | image_url: width: 24 }}" alt="Check" class="icon">
            {%- else -%}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
          </td>
          <td class="feature-status">
            {%- if section.settings.icon_x != blank -%}
              <img src="{{ section.settings.icon_x | image_url: width: 24 }}" alt="X" class="icon">
            {%- else -%}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
          </td>
        </tr>
      {%- endfor -%}
    </tbody>
  </table>
</div>

{% schema %}
{
  "name": "Comparison Table",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "other_product_name",
      "label": "Other Product Name",
      "default": "Other Headlamps"
    },
    {
      "type": "image_picker",
      "id": "icon_check",
      "label": "Icon Check"
    },
    {
      "type": "image_picker",
      "id": "icon_x",
      "label": "Icon X"
    }
  ],
  "blocks": [
    {
      "type": "comparison_row",
      "name": "Comparison Row",
      "settings": [
        {
          "type": "text",
          "id": "feature_name",
          "label": "Feature Name",
          "default": "Feature"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom"
    }
  ]
}
{% endschema %}
