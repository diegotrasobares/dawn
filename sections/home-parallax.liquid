{%- style -%}
  .parallax-section {
    position: relative;
    width: 100%;
    height: 300px;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    overflow: hidden;
    background-attachment: fixed;
    background-position: center;
    background-size: cover;
  }

  .content-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
    z-index: 1;
    text-align: left;
  }

  .content-wrapper h2 {
    margin-bottom: 20px;
  }
{%- endstyle -%}

<div
  class="parallax-section"
  style="background-image: url('{{ section.settings.background_image | image_url: width: 1600 }}');"
>
  <div class="content-wrapper">
    <h2>{{ section.settings.title }}</h2>
    <p>{{ section.settings.paragraph }}</p>
  </div>
</div>

{% schema %}
{
  "name": "Parallax Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Your Parallax Title"
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Section Paragraph",
      "default": "This is a customizable parallax section. Add your content here."
    }
  ],
  "presets": [
    {
      "name": "Parallax Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
