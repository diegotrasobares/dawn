{%- style -%}
  .testimonial-carousel {
    max-width: 100%;
    overflow: hidden;
  }

  .carousel-container {
    display: flex;
    white-space: nowrap;
    overflow: hidden;
    position: relative;
  }

  .carousel-track {
    display: inline-flex;
    animation: scroll 20s linear infinite;
  }

  .testimonial {
    display: inline-block;
    text-align: center;
    width: 200px; /* Ajusta el ancho según tus necesidades */
    padding: 10px;
  }

  .testimonial img {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    margin-bottom: 10px;
  }

  /* Keyframes para la animación infinita */
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }
{%- endstyle -%}

<div class="testimonial-carousel">
  <h2>Testimonials</h2>
  <div class="carousel-container">
    <div class="carousel-track">
      {% for testimonial in section.blocks %}
        <div class="testimonial">
          <img src="{{ testimonial.settings.image | img_url: '80x80' }}" alt="Testimonial Image">
          <p class="review">{{ testimonial.settings.review }}</p>
          <p class="name">{{ testimonial.settings.name }}</p>
          <p class="stars">{{ testimonial.settings.stars }}</p>
        </div>
      {% endfor %}
      <!-- Cloning the testimonials to fill the space -->
      {% for testimonial in section.blocks %}
        <div class="testimonial">
          <img src="{{ testimonial.settings.image | img_url: '80x80' }}" alt="Testimonial Image">
          <p class="review">{{ testimonial.settings.review }}</p>
          <p class="name">{{ testimonial.settings.name }}</p>
          <p class="stars">{{ testimonial.settings.stars }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const track = document.querySelector('.carousel-track');
    const testimonials = track.children;

    // Duplicar los testimonios para asegurarnos de que hay suficientes en pantallas grandes
    for (let i = 0; i < testimonials.length; i++) {
      track.appendChild(testimonials[i].cloneNode(true));
    }
  });
</script>

{% schema %}
{
  "name": "Testimonial Carousel",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Testimonials"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Person Image"
        },
        {
          "type": "textarea",
          "id": "review",
          "label": "Review",
          "default": "This is an amazing product! Highly recommend it."
        },
        {
          "type": "text",
          "id": "name",
          "label": "Person Name",
          "default": "John Doe"
        },
        {
          "type": "range",
          "id": "stars",
          "label": "Number of Stars",
          "min": 1,
          "max": 5,
          "default": 5
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom"
    }
  ]
}
{% endschema %}
