{% comment %}
  Renders product variant options with thumbnail and name under the image.

  Accepts:
  - product: {Object} product object.
  - option: {Object} current product_option object.
  - block: {Object} block object.
  - picker_type: {String} type of picker to display

  Usage:
  {% render 'product-variant-options',
    product: product,
    option: option,
    block: block
    picker_type: picker_type
  %}
{% endcomment %}
{%- liquid
  assign product_form_id = 'product-form-' | append: section.id
-%}

{%- for value in option.values -%}
  {%- liquid
    assign variant = product.variants | where: 'option{{ forloop.index }}', value | first
    assign variant_image = variant.image
    assign option_disabled = true
    if value.available
      assign option_disabled = false
    endif
  -%}

  {%- capture input_id -%}
    {{ section.id }}-{{ option.position }}-{{ forloop.index0 -}}
  {%- endcapture -%}

  {%- capture input_name -%}
    {{ option.name }}-{{ option.position }}
  {%- endcapture -%}

  {%- capture input_dataset -%}
    data-product-url="{{ value.product_url }}"
    data-option-value-id="{{ value.id }}"
  {%- endcapture -%}

  <div class="variant-picker-item">
    <label for="{{ input_id }}" class="variant-label">
      {% if variant_image %}
        <img src="{{ variant_image.src | img_url: '100x100' }}" alt="{{ value }}" class="variant-thumbnail">
      {% else %}
        <!-- Fallback image in case no variant image is available -->
        <img src="{{ 'placeholder.jpg' | asset_url }}" alt="{{ value }}" class="variant-thumbnail">
      {% endif %}
      <span class="variant-name">{{ value }}</span>
    </label>

    <input
      type="radio"
      id="{{ input_id }}"
      name="{{ input_name | escape }}"
      value="{{ value | escape }}"
      form="{{ product_form_id }}"
      {% if value.selected %}
        checked
      {% endif %}
      {% if option_disabled %}
        class="disabled"
      {% endif %}
      {{ input_dataset }}
    >
  </div>
{%- endfor -%}
