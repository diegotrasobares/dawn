{%- style -%}
  .parallax-section {
    position: relative;
    width: 100%;
    height: 300px; /* Ajusta la altura según tus necesidades */
    display: flex;
    align-items: center;
    justify-content: flex-start;
    overflow: hidden;
    background-attachment: fixed;
    background-position: center;
    background-size: cover;
    color: {{ section.settings.text_color }}; /* Color general del texto */
  }

  .content-wrapper {
    display: flex;
    background: #afaaaa2b;
    border-radius: var(--text-boxes-radius);
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
    z-index: 1;
    text-align: left;
    flex-direction: column;
    align-items: center;
  }

  .content-wrapper h2 {
    font-size: 3rem;
    margin-bottom: 20px;
    color: {{ section.settings.title_color }}; /* Color del título */
  }

  .content-wrapper p {
    font-size: 1.2rem;
    color: {{ section.settings.paragraph_color }}; /* Color del párrafo */
  }
{%- endstyle -%}

<div
  class="parallax-section"
  style="background-image: url('{{ section.settings.background_image | image_url: width: 1600 }}');"
>
  <div class="content-wrapper">
    <h2>{{ section.settings.title }}</h2>
    <p>{{ section.settings.paragraph }}</p>
  </div>
</div>

{% schema %}
{
  "name": "Parallax Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Your Parallax Title"
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Section Paragraph",
      "default": "This is a customizable parallax section. Add your content here."
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "paragraph_color",
      "label": "Paragraph Color",
      "default": "#eeeeee"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "General Text Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Parallax Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
