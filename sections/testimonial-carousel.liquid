{%- style -%}
  .testimonial-carousel {
    max-width: 800px;
    margin: auto;
    padding: 20px;
    text-align: center;
  }

  .testimonial-carousel h2 {
    font-size: 2rem;
    margin-bottom: 20px;
    color: #333;
  }

  .carousel-wrapper {
    overflow: hidden;
    position: relative;
  }

  .carousel {
    display: flex;
    transition: transform 0.5s ease-in-out;
  }

  .testimonial {
    flex: 0 0 100%;
    padding: 20px;
    box-sizing: border-box;
    text-align: center;
  }

  .testimonial img {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    margin-bottom: 10px;
  }

  .testimonial p {
    font-size: 1rem;
    color: #666;
  }

  .testimonial .name {
    font-weight: bold;
    margin-top: 10px;
    font-size: 1.2rem;
    color: #333;
  }

  .testimonial .stars {
    margin-top: 5px;
    color: #f39c12;
  }
{%- endstyle -%}

<div class="testimonial-carousel">
  <h2>{{ section.settings.title }}</h2>
  <div class="carousel-wrapper">
    <div class="carousel">
      {%- for testimonial in section.blocks -%}
        <div class="testimonial">
          <img src="{{ testimonial.settings.image | image_url: width: 80 }}" alt="{{ testimonial.settings.name }}">
          <p>{{ testimonial.settings.review }}</p>
          <div class="name">{{ testimonial.settings.name }}</div>
          <div class="stars">
            {%- for star in (1..testimonial.settings.stars) -%}
              &#9733;
            {%- endfor -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const carousel = document.querySelector('.carousel');
    let currentIndex = 0;
    const totalTestimonials = carousel.children.length;

    function moveCarousel() {
      currentIndex++;
      if (currentIndex === totalTestimonials) {
        currentIndex = 0;
      }
      carousel.style.transform = `translateX(-${currentIndex * 100}%)`;
    }

    // Move the carousel every 3 seconds
    setInterval(moveCarousel, 3000);
  });
</script>

{% schema %}
{
  "name": "Testimonial Carousel",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Testimonials"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Person Image"
        },
        {
          "type": "textarea",
          "id": "review",
          "label": "Review",
          "default": "This is an amazing product! Highly recommend it."
        },
        {
          "type": "text",
          "id": "name",
          "label": "Person Name",
          "default": "John Doe"
        },
        {
          "type": "range",
          "id": "stars",
          "label": "Number of Stars",
          "min": 1,
          "max": 5,
          "default": 5
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom"
    }
  ]
}
{% endschema %}
