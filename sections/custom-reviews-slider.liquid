<!-- customer-reviews.liquid -->
<section class="customer-reviews">
  <div class="reviews-container">
    <h2>{{ section.settings.section_title }}</h2>

    <div class="reviews-slider">
      {% for block in section.blocks %}
        <div class="review-item">
          <!-- Imagen del producto -->
          <div class="product-image">
            <img
              src="{{ block.settings.product_image | image_url: width: 150, height: 150 }}"
              alt="Product Image"
            >
          </div>

          <!-- Estrellas de reseÃ±a -->
          <div class="review-rating">
            {% for i in (1..block.settings.review_rating) %}
              &#9733;
            {% endfor %}
          </div>

          <p class="review-text">{{ block.settings.review_text }}</p>

          <div class="footer-container">
            <p class="review-author">{{ block.settings.review_author }}</p>

            <div class="review-image">
              <img
                src="{{ block.settings.image | image_url: width: 30, height: 30 }}"
                alt="{{ block.settings.review_author }}"
              >
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .footer-container{
    display:flex;
    gap:1rem;
    align-items: center;
  }
  .customer-reviews {
    padding: 20px;
    background-color: #f9f9f9;
  }
  .reviews-container {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }
  .reviews-slider {
    display: flex;
    overflow-x: auto;
    scroll-behavior: smooth;
  }
  .review-item {
    margin: 20px;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 8px;
    background-color: white;
    flex: 0 0 300px;
    text-align: left;
  }
  .product-image img {
    width: 150px;
    height: 150px;
    object-fit: cover;
    margin-bottom: 10px;
  }
  .review-rating {
    font-size: 20px;
    color: #ffcc00;
    margin-bottom: 10px;
  }
  .review-text {
    font-size: 16px;
    margin-bottom: 10px;
  }
  .review-author {
    font-size: 14px;
    font-weight: bold;
    margin-bottom: 10px;
  }
  .review-image img {
    border-radius: 50%;
  }
</style>

{% schema %}
  {
  "name": "Customer Reviews",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Why did more than 20,000 happy users choose Fresh Juice Blender?"
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "textarea",
          "id": "review_text",
          "label": "Review Text",
          "default": "This blender is perfect! It not only blends frozen fruit but it crushes ice so well too. It's easy to clean and fits in the cup holder in my car."
        },
        {
          "type": "text",
          "id": "review_author",
          "label": "Author Name",
          "default": "Jenny M."
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Author Image"
        },
        {
          "type": "image_picker",
          "id": "product_image",
          "label": "Product Image"
        },
        {
          "type": "range",
          "id": "review_rating",
          "label": "Rating (1-5)",
          "min": 1,
          "max": 5,
          "default": 5
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Customer Reviews",
      "category": "Custom"
    }
  ]
}
{% endschema %}
