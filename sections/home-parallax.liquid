{%- style -%}
  .parallax-section {
    position: relative;
    width: 100%;
    height: 500px; /* Ajusta la altura según tus necesidades */
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    overflow: hidden;
  }

  .parallax-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -1;
    background-attachment: fixed;
    background-position: center;
    background-size: cover;
  }

  .content-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
    z-index: 1;
    text-align: left;
  }

  .content-wrapper h2 {
    font-size: 3rem;
    margin-bottom: 20px;
    color: #fff; /* Color del título */
  }

  .content-wrapper p {
    font-size: 1.2rem;
    color: #eee; /* Color del párrafo */
  }
{%- endstyle -%}

<div class="parallax-section">
  {%- if section.settings.background_image != blank -%}
    <div
      class="parallax-background"
      style="background-image: url('{{ section.settings.background_image | image_url: width: 1600 }}');"
    ></div>
  {%- endif -%}

  <div class="content-wrapper">
    <h2>{{ section.settings.title }}</h2>
    <p>{{ section.settings.paragraph }}</p>
  </div>
</div>

{% schema %}
{
  "name": "Parallax Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Your Parallax Title"
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Section Paragraph",
      "default": "This is a customizable parallax section. Add your content here."
    }
  ],
  "presets": [
    {
      "name": "Parallax Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
