{%- style -%}
  .testimonial-carousel {
    max-width: 1000px;
    margin: auto;
    text-align: center;
    margin: 1rem 0 1rem 0;
  }

  .testimonial-carousel h2 {
    font-size: 2rem;
    margin-bottom: 20px;
    color: #333;
  }

  .carousel-wrapper {
    overflow: hidden; /* Oculta los testimonios que están fuera del área visible */
    position: relative;
    width: 100%;
  }

  .carousel {
    display: flex;
    transition: none; /* Eliminamos la transición controlada manualmente */
    will-change: transform;
    animation: scroll 20s linear infinite; /* Desplazamiento continuo */
  }

  .testimonial {
    min-width: 200px; /* El tamaño mínimo de cada testimonio, ajustable */
    margin: 0 10px; /* Espacio entre testimonios */
    box-sizing: border-box;
    text-align: center;
    flex-shrink: 0; /* Evita que se reduzcan los testimonios en pantallas pequeñas */
  }

  .testimonial img, .testimonial svg {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    margin-bottom: 10px;
  }

  .testimonial p {
    font-size: 1rem;
    color: #666;
  }

  .testimonial .name {
    font-weight: bold;
    margin-top: 10px;
    font-size: 1.2rem;
    color: #333;
  }

  .testimonial .stars {
    margin-top: 5px;
    color: #f39c12;
  }

  /* Definimos la animación para el scroll infinito */
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }
{%- endstyle -%}

<div class="testimonial-carousel">
  <h2>{{ section.settings.title }}</h2>
  <div class="carousel-wrapper">
    <div class="carousel">
      {%- for testimonial in section.blocks -%}
        <div class="testimonial">
          {%- if testimonial.settings.image != blank -%}
            <img src="{{ testimonial.settings.image | image_url: width: 80 }}" alt="{{ testimonial.settings.name }}">
          {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
          <p>{{ testimonial.settings.review }}</p>
          <div class="name">{{ testimonial.settings.name }}</div>
          <div class="stars">
            {%- for star in (1..testimonial.settings.stars) -%}
              &#9733;
            {%- endfor -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const carousel = document.querySelector('.carousel');
    const wrapperWidth = document.querySelector('.carousel-wrapper').offsetWidth;
    const testimonials = carousel.children;
    const totalTestimonials = testimonials.length;

    // Duplicamos los testimonios para crear un efecto de carrusel infinito
    for (let i = 0; i < totalTestimonials; i++) {
      let clone = testimonials[i].cloneNode(true);
      carousel.appendChild(clone);
    }

    // Ajustar la velocidad del scroll basado en la cantidad de testimonios
    const totalWidth = carousel.scrollWidth;
    const scrollTime = totalWidth / wrapperWidth * 8; // Ajustar la duración en segundos

    carousel.style.animationDuration = `${scrollTime}s`;
  });
</script>

{% schema %}
{
  "name": "Testimonial Carousel",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Testimonials"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Person Image"
        },
        {
          "type": "textarea",
          "id": "review",
          "label": "Review",
          "default": "This is an amazing product! Highly recommend it."
        },
        {
          "type": "text",
          "id": "name",
          "label": "Person Name",
          "default": "John Doe"
        },
        {
          "type": "range",
          "id": "stars",
          "label": "Number of Stars",
          "min": 1,
          "max": 5,
          "default": 5
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom"
    }
  ]
}
{% endschema %}
