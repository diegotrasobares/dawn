{%- style -%}
  .testimonial-carousel {
    max-width: 100%;
    overflow: hidden;
  }

  .carousel-container {
    display: flex;
    white-space: nowrap;
    overflow: hidden;
    position: relative;
  }

  .carousel-track {
    display: inline-flex;
    animation: scroll 20s linear infinite;
  }

  .testimonial {
    display: inline-block;
    text-align: center;
    width: 200px; /* Ajusta el ancho según tus necesidades */
    padding: 10px;
  }

  .testimonial img {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    margin-bottom: 10px;
  }

  /* Keyframes para la animación infinita */
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }
{%- endstyle -%}

<div class="testimonial-carousel">
  <h2>{{ section.settings.title }}</h2>
  <div class="carousel-wrapper">
    <div class="carousel">
      {%- for testimonial in section.blocks -%}
        <div class="testimonial">
          {%- if testimonial.settings.image != blank -%}
            <img src="{{ testimonial.settings.image | image_url: width: 80 }}" alt="{{ testimonial.settings.name }}">
          {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
          <p>{{ testimonial.settings.review }}</p>
          <div class="name">{{ testimonial.settings.name }}</div>
          <div class="stars">
            {%- for star in (1..testimonial.settings.stars) -%}
              &#9733;
            {%- endfor -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const carousel = document.querySelector('.carousel');
    const wrapperWidth = document.querySelector('.carousel-wrapper').offsetWidth;
    const testimonials = carousel.children;
    const totalTestimonials = testimonials.length;

    // Duplicamos los testimonios para crear un efecto de carrusel infinito
    for (let i = 0; i < totalTestimonials; i++) {
      let clone = testimonials[i].cloneNode(true);
      carousel.appendChild(clone);
    }

    // Ajustar la velocidad del scroll basado en la cantidad de testimonios
    const totalWidth = carousel.scrollWidth;
    const scrollTime = totalWidth / wrapperWidth * 8; // Ajustar la duración en segundos

    carousel.style.animationDuration = `${scrollTime}s`;
  });
</script>

{% schema %}
{
  "name": "Testimonial Carousel",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Testimonials"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Person Image"
        },
        {
          "type": "textarea",
          "id": "review",
          "label": "Review",
          "default": "This is an amazing product! Highly recommend it."
        },
        {
          "type": "text",
          "id": "name",
          "label": "Person Name",
          "default": "John Doe"
        },
        {
          "type": "range",
          "id": "stars",
          "label": "Number of Stars",
          "min": 1,
          "max": 5,
          "default": 5
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom"
    }
  ]
}
{% endschema %}
