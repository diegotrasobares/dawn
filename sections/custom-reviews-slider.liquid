<!-- customer-reviews.liquid -->
<section class="customer-reviews">
  <div class="reviews-container">
    <h1 class="">
      {{ section.settings.section_title }}
      <span class="add-line" />
    </h1>

    <div class="reviews-wrapper">
      <div class="arrow left-arrow">&#9664;</div>
      <!-- Flecha izquierda -->

      <div class="reviews-slider">
        {% for block in section.blocks %}
          <div class="review-item">
            <div class="product-image">
              <img
                src="{{ block.settings.product_image | image_url: width: 300, height: 300 }}"
                alt="Product Image"
                class="fixed-size-image"
              >
            </div>

            <!-- Estrellas de reseña -->
            <div class="review-rating">
              {% for i in (1..block.settings.review_rating) %}
                &#9733;
              {% endfor %}
            </div>

            <p class="review-text">{{ block.settings.review_text }}</p>

            <div class="footer-container">
              <p class="review-author">{{ block.settings.review_author }}</p>

              <div class="review-image">
                <img
                  src="{{ block.settings.image | image_url: width: 30, height: 30 }}"
                  alt="{{ block.settings.review_author }}"
                  class="author-image"
                >
              </div>
            </div>
          </div>
        {% endfor %}
      </div>

      <div class="arrow right-arrow">&#9654;</div>
      <!-- Flecha derecha -->
    </div>
  </div>
</section>

<style>
  .customer-reviews {
    padding: 20px;
    background-color: #f9f9f9;
  }

  .reviews-container {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
    position: relative;
  }

  .reviews-wrapper {
    display: flex;
    align-items: center;
  }

  .reviews-slider {
    display: flex;
    overflow-x: scroll; /* Permite el scroll horizontal con el dedo en móviles */
    scroll-behavior: smooth;
    width: 100%;
    gap: 20px; /* Espaciado entre reseñas */
    -webkit-overflow-scrolling: touch; /* Habilita el smooth scrolling en móviles */
  }

  .review-item {
    margin: 20px;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 8px;
    background-color: white;
    flex: 0 0 300px; /* Tamaño fijo para las reseñas */
    text-align: left;
  }

  .product-image img {
    width: 300px;
    height: 300px;
    object-fit: cover;
    margin-bottom: 10px;
    border-radius: 8px;
  }

  .review-rating {
    font-size: 20px;
    color: #ffcc00;
    margin-bottom: 10px;
  }

  .review-text {
    font-size: 16px;
    margin-bottom: 10px;
  }

  .review-author {
    font-size: 14px;
    font-weight: bold;
    margin-bottom: 10px;
  }

  .review-image img {
    width: 30px;
    height: 30px;
    object-fit: cover;
    border-radius: 50%;
  }

  .footer-container {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .arrow {
    font-size: 2rem;
    cursor: pointer;
    padding: 10px;
    user-select: none;
    color: #333;
  }

  .left-arrow {
    margin-right: 10px;
  }

  .right-arrow {
    margin-left: 10px;
  }

  @media (max-width: 768px) {
    .arrow {
      display: none; /* Ocultar flechas en móvil */
    }

    .reviews-slider {
      scroll-snap-type: x mandatory; /* Facilitar scroll por reseñas completas */
    }

    .review-item {
      scroll-snap-align: start; /* Ajustar para cada reseña */
    }
  }
</style>

<script>
   document.addEventListener("DOMContentLoaded", function() {
    const leftArrow = document.querySelector(".left-arrow");
    const rightArrow = document.querySelector(".right-arrow");
    const slider = document.querySelector(".reviews-slider");

    // Desplazamiento con flechas solo en escritorio
    if (window.innerWidth > 768) {
      leftArrow.addEventListener("click", function() {
        slider.scrollLeft -= 300; // Ajustar para controlar el desplazamiento
      });

      rightArrow.addEventListener("click", function() {
        slider.scrollLeft += 300; // Ajustar para controlar el desplazamiento
      });

      const reviewsCount = slider.children.length;
      if (reviewsCount <= 3) {
        leftArrow.style.display = "none";
        rightArrow.style.display = "none";
      }
    }
  });
</script>

{% schema %}
  {
  "name": "Customer Reviews",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Why did more than 20,000 happy users choose Fresh Juice Blender?"
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "textarea",
          "id": "review_text",
          "label": "Review Text",
          "default": "This blender is perfect! It not only blends frozen fruit but it crushes ice so well too. It's easy to clean and fits in the cup holder in my car."
        },
        {
          "type": "text",
          "id": "review_author",
          "label": "Author Name",
          "default": "Jenny M."
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Author Image"
        },
        {
          "type": "image_picker",
          "id": "product_image",
          "label": "Product Image"
        },
        {
          "type": "range",
          "id": "review_rating",
          "label": "Rating (1-5)",
          "min": 1,
          "max": 5,
          "default": 5
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Customer Reviews",
      "category": "Custom"
    }
  ]
}
{% endschema %}
